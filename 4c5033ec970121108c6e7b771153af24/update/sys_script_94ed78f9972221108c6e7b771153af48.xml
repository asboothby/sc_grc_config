        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	if(current.metric_type.name == 'GRC Attestation')
	{
		gs.info('AI Updated - ' + current.sn_grc_profile);
// 		gs.addInfoMessage('AI Updated - ' + current.sn_grc_profile);
		
		var p2ptCount = 0;
		var gaP2PT = new GlideAggregate('sn_grc_m2m_profile_profile_type');
		gaP2PT.addQuery('profile_type.name', 'LM Enterprise Controls');
		gaP2PT.addQuery('profile', current.sn_grc_profile);
		gaP2PT.addAggregate('COUNT');
		gaP2PT.query();
		while(gaP2PT.next())
		{
			p2ptCount = gaP2PT.getAggregate('COUNT'); 
		}
		
		if(p2ptCount> 0)
		{
			current.state='wip';
			current.update();
			current.state = 'complete';
			current.percent_answered = (2/3) * 100;
			current.update();			
		}
	
	}


})(current, previous);]]></script>
