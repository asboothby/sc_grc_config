        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	gs.info('set auto answer to attest - current.content: ' + current.content);
	gs.addInfoMessage('set auto answer to attest');
	var gsAutoAnswr = new GlideRecord('x_631631_sc_grc_co_autoanswer_matrix');
	gsAutoAnswr.addQuery('ent_svc_metric_type',current.content);
	gsAutoAnswr.query();
	if(gsAutoAnswr.hasNext()) gs.info('auto answer matrix record found');
	while(gsAutoAnswr.next())
	{
// 		var entSvcCtrlId = gsAutoAnswr.ent_svc_metric_type;
		var controlId = gsAutoAnswr.assessment_control_type;

		gsControl = new GlideRecord('sn_compliance_control');
		gsControl.addQuery('profile',current.profile);
		gsControl.addQuery('content',controlId);
		gsControl.query();
		if(gsControl.next())
		{
			gsControl.state = 'attest';
			gsControl.update();
		}
	}
	
})(current, previous);]]></script>
